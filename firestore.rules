rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Later: entities, tracks, deadlines library, events
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
